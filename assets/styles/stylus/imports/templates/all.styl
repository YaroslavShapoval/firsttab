body
  background url(../img/mooning.png) repeat $white
  font-size 15px

.dials
  margin 50px 40px
  text-align center

.dial
  position relative
  display inline-block
  vertical-align top
  border 1px solid #aaa
  text-align center
  width 340px
  height 180px
  margin 40px 20px 0px
  padding 7px 0
  background $white
  border-radius 6px
  > a
    display inline-block
    width 100%
    text-decoration none
  &:hover
    border 1px solid $gray

